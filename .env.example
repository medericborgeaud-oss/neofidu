# ===============================================
# NeoFidu - Variables d'environnement
# ===============================================
# Copiez ce fichier en .env.local et remplissez les valeurs

# -----------------------------------------------
# STRIPE - Paiements
# -----------------------------------------------
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -----------------------------------------------
# CLOUDINARY - Stockage des documents
# -----------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Variable publique pour les liens dans le dashboard admin
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# -----------------------------------------------
# SUPABASE - Base de données
# -----------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxx

# -----------------------------------------------
# RESEND - Envoi d'emails
# -----------------------------------------------
RESEND_API_KEY=re_xxx

# -----------------------------------------------
# ADMIN - Accès au dashboard
# -----------------------------------------------
ADMIN_PASSWORD=your_secure_password

# -----------------------------------------------
# GOOGLE ANALYTICS & TAG MANAGER
# -----------------------------------------------
# Google Analytics 4 Measurement ID (format: G-XXXXXXXXXX)
# Votre ID: G-EP8MBD9QRN
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager Container ID (format: GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
